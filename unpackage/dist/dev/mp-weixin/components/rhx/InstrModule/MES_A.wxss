}
.mask{
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	background: rgba(255, 255, 255, 0.6);
}
.mesage{
	position: relative;
	width: 100%;
	height: 100%;
	padding: 40rpx;
}
.title{
