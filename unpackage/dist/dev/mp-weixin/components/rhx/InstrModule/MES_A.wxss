	color: #2E2E30;
	line-height: 80rpx;
}
.content{
	ont-family: PingFangSC-Regular;
	font-size: 13px;
	color: #9B9B9B;
	letter-spacing: 0;
	text-align: justify;
	line-height: 18px;
}
.dataList{
	position: relative;
	width: 100%;
}
.inputBox{
	position: relative;
	width: 100%;
}
.title-items{
	position: relative;
	width: 100%;
