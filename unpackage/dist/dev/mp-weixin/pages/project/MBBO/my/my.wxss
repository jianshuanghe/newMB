
.tabBar-content {
	position: fixed;
	bottom: 0;
	width: 750rpx;
	height: 100rpx;
	background: #ffffff;
	-webkit-box-shadow: 0 -2rpx 0 0 #f5f5f5;
	        box-shadow: 0 -2rpx 0 0 #f5f5f5;
}
.tabBarBox {
	position: relative;
	width: 750rpx;
	height: 100rpx;
	padding: 5rpx 5rpx 5rpx 5rpx;
}
.tb-content {
	position: relative;
	width: 740rpx;
	height: 100rpx;
}
.tb-box {
	position: relative;
	width: 20%;
}
.tb-img {
	position: relative;
	width: 100%;
	text-align: center;
}
.tb-img > image {
	position: relative;
	width: 44rpx;
	height: 44rpx;
	margin: auto;
	top: 8rpx;
}
.tb-img-pub {
	position: relative;
	width: 100%;
	text-align: center;
}
.tb-img-pub > image {
	position: relative;
	width: 74rpx;
	height: 74rpx;
	margin: auto;
	top: 8rpx;
}
.tb-text {
	position: relative;
	width: 100%;
	line-height: 20rpx;
	text-align: center;
}
.tb-text > text {
	position: relative;
	width: 100%;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #2e2e30;
}
.class-a {
	color: #02c2a2 !important;
}
.noticeCount {
	position: absolute;
	top: 1rpx;
	right: 29rpx;
	width: 36rpx;
	height: 36rpx;
	background: #ff3a2e;
	font-size: 20rpx;
	color: #ffffff;
	border-radius: 50%;
	text-align: center;
	line-height: 36rpx;
}


.my{
	width: 100%;
	min-height: 100%;
}

