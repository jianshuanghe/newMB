
.my-headers{
	width: 100%;
	height: 240rpx;
	background: #FFFFFF;
	border-bottom: 2rpx solid #F5F5F5;
	margin-top: 88rpx;
}
.my-header-img{
	width: 168rpx;
	height: 100%;
	line-height: 240rpx;
	position: relative;
	float: left;
}
.my-header-img>image:nth-of-type(1){
	width: 120rpx;
	height: 120rpx;
	display: block;
	right: 0;
	top: 60rpx;
	border-radius: 50%;
	position: absolute;
}
.my-header-img>image:nth-of-type(2){
	width: 40rpx;
	height: 28rpx;
	position: absolute;
	right: 0;
	bottom: 58rpx;
}
.my-header-content{
	width: 70%;
	height: 100%;
	float: left;
	margin-left:30rpx;
}
.header-content-name{
	max-width: 280rpx;
	font-size: 40rpx;
	color: #3C3D3F;
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	white-space: nowrap;
	margin-top:55rpx;
	float: left;
	font-weight: bold;
}
.header-content-img{
	width: 135rpx;
	height: 36rpx;
	margin-top: 75rpx;
	margin-left: 10rpx;
	float: left;
}
.header-content-img>image{
	width: 100%;
	height: 100%;
}
.header-content-zi{
	font-size: 26rpx;
	color: #9B9B9B;
	clear: both;
	padding: 0.1rpx;
}
.header-content-zis{
	padding: 0rpx 2rpx 0rpx 2rpx;
	border: 2rpx solid #9B9B9B;
	border-radius: 4rpx;
	font-size: 20rpx;
	color: #9B9B9B;
	margin-left: 10rpx;
}
.header-content-zia{
	font-size: 30rpx;
	width: 22rpx;
	height: 20rpx;
	color: #9B9B9B;
	margin-left: 10rpx;
	margin-top: 5rpx;
}

