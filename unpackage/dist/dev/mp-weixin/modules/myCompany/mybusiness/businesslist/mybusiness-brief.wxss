
.mybusiness-brief{
	width: 100%;
	background: #FFFFFF;
	padding: 0.1rpx;
}
.mybusiness-brief-con{
	font-size: 14px;
	color: #5D5D5D;
	width: 90%;
	margin: 10rpx auto auto;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
}
.fold{
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}
.show{
	font-size: 26rpx;
	color: #02C2A2;
	position: absolute;
	right: 40rpx;
	margin-top:10rpx;
}
.show>image{
	width: 20rpx;
	height: 20rpx;
	margin-left: 8rpx;
}
.mybusiness-brief-code{
	width: 100%;
	min-height: 300rpx;
	margin-top: 90rpx;
	padding-bottom: 100rpx;
}
.codex{
	margin-top: 20rpx;
}
.mybusiness-brief-codes{
	width: 480rpx;
	height: 602rpx;
	border: 2rpx solid #E2E2E2;
	margin: 100rpx auto auto;
}
.mybusiness-brief-codes-one{
	width: 100%;
	height: 480rpx;
	border-bottom: 2rpx solid #E2E2E2;
	overflow: auto;
}
.mybusiness-brief-codes-two{
	width: 100%;
	height: 120rpx;
	text-align: center;
	/* line-height: 120upx; */
	font-size: 12px;
	color: #02C2A2;
	padding-top: 20rpx;
}
.mybusiness-brief-Tips{
	margin-top: 88rpx;
	width: 100%;
	height: 200rpx;
	font-size: 26rpx;
	color: #2E2E30;
	text-align: center;
}
.mybusiness-brief-Tipss{
	color: #02C2A2;
	margin-left: 10rpx;
}
.mybusiness-brief-codes-er{
	width: 80%;
	height: 80%;
	margin: 50rpx auto auto auto;
	position: relative;
}
.erweima{
	width: 100%;
	height: 100%;
}
.mybusiness-brief-codes-er-img{
	width: 85%;
	height: 85%;
	position: absolute;
	top:28rpx;
	left: 30rpx;
}
.mybusiness-brief-codes-er-img>image{
	width: 100%;
	height: 100%;
}
.mybusiness-supply-bot{
	width: 100%;
	height: 120rpx;
	border-top: 2rpx solid #F5F5F5;
	position: fixed;
	bottom: 0;
	background: #FFFFFF;
}
.mybusiness-supply-Customer{
	width: 95%;
	height:90rpx;
	background: #02C2A2;
	margin: 15rpx auto;
	border-radius: 2px;
	font-size: 32rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 90rpx;
}
.brief-newcode{
	width: 90%;
	height: 78px;
	margin: 0 auto;
}
.brief-newcode-one{
	width: 60%;
	height: 100%;
	float: left;
}
.brief-newcode-one>view:nth-of-type(1){
	font-size: 32rpx;
	color: #2E2E30;
	padding-top: 25rpx;
	font-weight: bold;
}
.brief-newcode-one>view:nth-of-type(2){
	font-size: 28rpx;
	color: #2E2E30;
}
.brief-newcode-one>view:nth-of-type(2)>._span{
	color: #02C2A2;
}
.qiye-jie{
	width: 90%;
	height: 32rpx;
	font-size: 32rpx;
	color: #2E2E30;
	line-height: 32rpx;
	margin: 40rpx auto auto auto;
	font-weight: bold;
}
.brief-newcode-two{
	width: 156rpx;
	height: 156rpx;
	float: right;
	background-image: url('http://style.iambuyer.com/mbc/news/erweima.png');
	background-size: 100% 100%;
	text-align: center;
	line-height: 156rpx;
}
.brief-newcode-two>image{
	width: 85%;
	height: 85%;
	padding-top: 12rpx;
}

