
.Buyer-details{
	width: 100%;
	min-height: 100%;
	background: #FFFFFF;
}
.tian{
	width: 100%;
	height: 88rpx;
}
.my-title {
	width: 100%;
	height: 88rpx;
	background: #ffffff;
	border-bottom: 2rpx solid #f5f5f5;
	position: fixed;
	top: 0;
	z-index: 999;
}
.quickBtn-Fd {
	width: 5%;
	margin-left: 38rpx;
}
.search-Fd {
	position: relative;
	width: 100%;
	text-align: center;
	line-height: 88rpx;
	font-size: 28rpx;
	color: #2e2e30;
}
.Buyer-details-title{
	width: 90%;
	font-size: 40rpx;
	font-weight: bold;
	color: #2E2E30;
	margin: 80rpx auto auto auto;
}
.Buyer-details-time{
	width: 90%;
	font-size: 28rpx;
	color: #9B9B9B;
	margin: 20rpx auto auto auto;
}
.Buyer-details-zi{
	width: 90%;
	font-size: 32rpx;
	color: #2E2E30;
	margin: 20rpx auto auto auto;
	line-height: 24px;
}
.Buyer-details-LX{
	width: 90%;
	font-size: 28rpx;
	color: #2E2E30;
	margin: 30rpx auto auto auto;
}
.Buyer-details-DH{
	width: 90%;
	font-size: 28rpx;
	color: #2E2E30;
	margin: 10rpx auto auto auto;
}
.Buyer-details-DH>._span{
	color: #02C2A2;
	margin-left: 10rpx;
}
.Buyer-details-GL{
	width: 90%;
	height: 146rpx;
	background: #F2FEFC;
	border-left: 4rpx solid #02C2A2;
	margin: 40rpx auto auto auto;
}
.Buyer-details-GL>view:nth-of-type(1){
	width: 90%;
	height: 50%;
	font-size: 32rpx;
	color: #02C2A2;
	margin-left: 20rpx;
	line-height: 106rpx;
	font-weight: bold;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.Buyer-details-GL>view:nth-of-type(2){
	width: 90%;
	height: 50%;
	font-size: 24rpx;
	color: #02C2A2;
	margin-left: 20rpx;
	line-height: 60rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.Buyer-details-del{
	width: 100%;
	height: 88rpx;
	text-align: center;
	line-height: 88rpx;
	font-size: 32rpx;
	color: #2E2E30;
	background: #FFFFFF;
	position: fixed;
	bottom: 0;
	border-top: 2rpx solid #F5F5F5;
}
.Already-details-XS{
	width: 90%;
	margin: 20rpx auto;
	height: 2rpx;
	border-bottom: 2rpx dashed #E2E2E2;
}
.Buyer-details-tian{
	width: 100%;
	height: 100rpx;
}

