.title{
	margin-top: 26rpx;
	text-align: center;
	font-family: Helvetica;
	font-size: 36rpx;
	color: #2E2E30;
	letter-spacing: 0;
	line-height: 32rpx;
}
.subtitle{
	margin-top: 24rpx;
	text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #9B9B9B;
	letter-spacing: 0;
	text-align: center;
	line-height: 24rpx;
}
.tuiJ_key{
	width: 100%;
	min-height: 100rpx;
	margin-top: 56rpx;
	margin-left:50rpx;
}
.tuiJ_key-title,.caiG_key-title{
	height:32rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	/* justify-content: center; */
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.tuiJ_key-title>image,.caiG_key-title>image{
	width:40rpx;
	height:40rpx;
}
.tuiJ_key-title>._span,.caiG_key-title>._span{
	font-family: PingFangSC-Semibold;
	font-size: 32rpx;
	color: #2E2E30;
	letter-spacing: 0;
	padding-left: 10rpx;
	/* line-height: 40upx; */
}
.checkBox{
	min-height:200rpx;
}
.clear{
	clear: both;
}
.gongY_key,.caiG_key{
	margin-top: 60rpx;
	margin-left:50rpx;
}
/* 供应 */
.gongying,.caigou{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.caigou{
	padding-bottom: 170rpx;
}
.rRadio-items2{
	position: relative;
	width: 204rpx;
	height: 70rpx;
	margin: 30rpx 24rpx 0 0;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #2E2E30;
	letter-spacing: 0;
	/* line-height: 80upx; */
	border: 1px solid #D2D2D2;
	border-radius: 17.5px;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.rRadio-items2 image{
	width: 36rpx;
	height:36rpx;
	position: absolute;
	top: -18rpx;
	right: 0rpx;
}
