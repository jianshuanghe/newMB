
.product-book{
	width: 100%;
	min-height: 100%;
}
.product-book-title{
	width: 100%;
	height: 88rpx;
	background: #FFFFFF;
	border-bottom: 2rpx solid #F5F5F5;
	position: fixed;
	top: 0;
	z-index: 999;
}
.quickBtn-Fd{
	width: 5%;
	margin-left: 38rpx;
}
.search-Fd{
	position: relative;
	width: 30%;
	margin-left: 36%;
	text-align: center;
	line-height: 88rpx;
	font-size: 28rpx;
	color: #2E2E30;
	float: left;
}
.tian{
	width: 100%;
	height: 88rpx;
}
.product-book-header{
	width: 100%;
	height: 360rpx;
	background: #FFFFFF;
	overflow: hidden;
}
.product-book-A{
	width: 92%;
	height: 240rpx;
	margin: 20rpx auto auto auto;
}
.product-book-image{
	width: 240rpx;
	height: 240rpx;
	float: left;
	position: relative;
}
.qrShare-list{
	position: relative;
	width: 690rpx;
	height: 720rpx;
	margin: -10rpx auto;
	background: #F9F9F9;
	/* padding: -10upx 0; */
}
.dibu{
	width: 100%;
	height: 162rpx;
}
.product-book-image>image:nth-of-type(1){
	width: 100%;
	height: 100%;
}
.tishis{
	width: 100rpx;
	height: 100rpx;
	position: absolute;
	top: 0;
	right: 0;
}
.product-book-zi{
	width: 430rpx;
	height: 240rpx;
	float: right;
	position: relative;
}
.product-book-ding{
	font-size: 14px;
	color: #2E2E30;
	line-height: 44rpx;
	min-height: 44rpx;
}
.product-book-zhong{
	font-size: 12px;
	color: #9B9B9B;
	line-height: 36rpx;
	margin-top: 10rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.product-book-time{
	font-size: 24rpx;
	color: #9B9B9B;
	position: absolute;
	bottom: 0;
}
.product-book-B{
	width: 92%;
	height: 80rpx;
	margin: 30rpx auto auto auto;
	border-top: 2rpx solid  #F5F5F5;
}
.product-book-BA{
	width: 13.5%;
	height: 26rpx;
	margin-top: 20rpx;
	line-height: 26rpx;
	font-size: 24rpx;
	color: #9B9B9B;
	border-right: 2rpx solid #E2E2E2;
	float: left;
	margin-left: 24rpx;
}
.right{
	border: 0;
}
.one{
	margin-left: 0;
}
.shou>image{
	width: 24rpx!important;
	height: 24rpx!important;
	margin-top: 0rpx !important;
}
.product-book-BA>image{
	width: 24rpx;
	height: 20rpx;
	margin-top: 2rpx;
	display: block;
	float: left;
}
.product-book-BA>._span{
	margin-left: 20rpx;
	display: block;
	float: left;
}
.product-book-con{
	width: 100%;
	height: 112rpx;
	text-align: center;
	line-height: 112rpx;
	font-size: 16px;
	color: #02C2A2;
	background: #FFFFFF;
	margin-top: 20rpx;
	font-weight: bold;
}
.QRcode-sub{
	width: 100%;
	height: 162rpx;
	background: #FFFFFF;
	position: fixed;
	bottom: 0;
}
.QRcode-sub>view{
	width: 16%;
	height: 100%;
	text-align: center;
	float: left;
	margin-left: 22rpx;
}
.QRcode-sub>view>view:nth-child(1){
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	background: #F0FCFA;
	margin: 20rpx auto auto auto;
}
.QRcode-sub>view>view:nth-child(1)>image{
	width: 32rpx;
	height: 32rpx;
	margin-top: 18rpx;
}
.QRcode-sub>view>view:nth-child(2){
	font-size: 24rpx;
	color: #02C2A2;
	padding-top: 10rpx;
}
.QRcode-Mask{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	background: rgba(0,0,0,0.3);
}
.QRcode-Mask-con{
	width: 100%;
	height: 1000rpx;
	background: #FFFFFF;
	position: absolute;
	bottom: 0;
}
.QRcode-Mask-con-header{
	width: 100%;
	height: 110rpx;
	text-align: center;
	line-height: 110rpx;
	font-size: 32rpx;
	color: #2E2E30;
}
.QRcode-Mask-con-lun{
	width: 90%;
	height: 600rpx;
	margin: 0 auto;
	background: #F9F9F9;
	overflow: hidden;
}
.QRcode-Mask-con-di{
	width: 50%;
	height: 150rpx;
	margin: 80rpx auto auto auto;
}
.QRcode-Mask-con-di>view{
	width: 50%;
	height: 100%;
	text-align: center;
	float: left;
}
.QRcode-Mask-con-di>view>view:nth-of-type(1){
	width: 80rpx;
	height: 80rpx;
	border: 2rpx solid #E2E2E2;
	border-radius: 50%;
	margin: 0 auto;
}
.QRcode-Mask-con-di>view>view:nth-of-type(2){
	font-size: 24rpx;
	color: #2E2E30;
	padding-top: 30rpx;
}
.QRcode-Mask-con-di>view>view:nth-of-type(1)>image{
	width: 32rpx;
	height: 32rpx;
	text-align: center;
	padding-top: 26rpx;
}
.swiper-box{
	height: 508rpx;
}
.swiper-slide{
	width: 360rpx;
	height: 508rpx;
	/* margin-left: 30%; */
}
.swiper-slide>image{
	width: 100%;
	height: 100%;
}
.erwe{
	width: 100%;
	text-align: center;
	height: 100rpx;
	font-size: 12px;
	color: #9B9B9B;
	line-height: 36rpx;
	padding-top: 290rpx;
}

