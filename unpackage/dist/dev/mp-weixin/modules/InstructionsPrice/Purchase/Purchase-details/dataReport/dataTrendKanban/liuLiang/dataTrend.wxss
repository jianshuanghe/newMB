	height: 24px;
	line-height: 24px;
	width: 33.33333333%;
	border-radius: 34px;
}
.echartTab {
	height: 24px;
	background: #d4fdf7;
	border-radius: 34px;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	text-align: center;
	font-family: PingFangSC-Medium;
	font-size: 12px;
	color: #2e2e30;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	margin: 15px;
}
