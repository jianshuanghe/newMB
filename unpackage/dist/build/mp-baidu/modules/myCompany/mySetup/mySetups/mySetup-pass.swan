<view class="password"><block s-if="{{!ispass}}"><view class="password-one"><view class="password-one-zi">验证手机</view><view class="password-one-inp"><input type="text" placeholder="请输入手机号" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="password-one-inp" style="margin:10rpx auto auto auto;"><input type="text" placeholder="请输入验证码" maxlength="4" data-event-opts="{{[['input',[['__set_model',['','Code','$event',[]]]]]]}}" value="{{Code}}" bindinput="__e"/><label data-event-opts="{{[['tap',[['getcode',['$event']]]]]}}" bindtap="__e" class="_span">获取验证码</label></view><block s-if="{{this.phone==''||this.Code==''}}"><view class="password-one-add">提交</view></block><block s-if="{{this.phone!==''&&this.Code!==''}}"><view data-event-opts="{{[['tap',[['addti']]]]}}" class="password-one-adds" bindtap="__e">提交</view></block></view></block><block s-if="{{ispass}}"><view class="password-one"><view class="password-one-zi">设置密码</view><view class="password-one-inp"><input type="password" placeholder="请输入新登录密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/></view><view class="password-one-inp" style="margin:10rpx auto auto auto;"><input type="password" placeholder="请确认新登录密码" data-event-opts="{{[['input',[['__set_model',['','passwords','$event',[]]]]]]}}" value="{{passwords}}" bindinput="__e"/></view><block s-if="{{this.password==''||this.passwords==''}}"><view class="password-one-add">提交</view></block><block s-if="{{this.password!==''&&this.passwords!==''}}"><view data-event-opts="{{[['tap',[['addjiao']]]]}}" class="password-one-adds" bindtap="__e">提交</view></block></view></block></view>