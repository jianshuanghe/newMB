
.switch-box{
	position: relative;
	width: 160rpx;
	height: 60rpx;
	margin-top: 30rpx;
	background: #EFEFEF;
	border-radius: 4rpx;
	float: right;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	letter-spacing: 0;
	line-height: 60rpx;
	text-align: center;
}
.switch-left{
	position: relative;
	width: 80rpx;
	height: 60rpx;
	background: #02C2A2;
	border-radius: 4rpx;
	color: #FFFFFF;
}
.switch-right{
	position: relative;
	width: 80rpx;
	color: #9B9B9B;
}

