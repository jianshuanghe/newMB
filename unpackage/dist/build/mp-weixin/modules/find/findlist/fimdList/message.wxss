
.find-message{
	width: 100%;
	height: 100%;
	background: #FFFFFF;
	position: fixed;
	top: 0;
	z-index: 999;
}
.find-message-header{
	width: 100%;
	height: 150rpx;
	text-align: center;
	line-height: 150rpx;
	position: relative;
	font-size: 32rpx;
	color: #2E2E30;
}
.find-message-header>image{
	position: absolute;
	width: 24rpx;
	height: 24rpx;
	right: 42rpx;
	top: 64rpx;
}
.find-message-con{
	width: 95%;
	height: 180rpx;
	margin: 0 auto;
}
.find-message-con>view:nth-of-type(1){
	font-size: 40rpx;
	color: #2E2E30;
}
.find-message-con>view:nth-of-type(2){
	font-size: 26rpx;
	color: #9B9B9B;
	line-height: 40rpx;
}
.find-message-name{
	width: 95%;
	height: 160rpx;
	margin: 0 auto;
}
.find-message-name>view:nth-of-type(1){
	font-size: 28rpx;
	color: #2E2E30;
}
.find-message-name>view:nth-of-type(2){
	width: 100%;
	height: 74rpx;
	border-bottom: 2rpx solid #EEEEEE;
}
.find-message-name>view:nth-of-type(2)>input{
	width: 100%;
	height: 100%;
}
.find-message-names{
	width: 95%;
	min-height: 180rpx;
	margin: 0 auto;
	position: relative;
}
.find-message-names>view:nth-of-type(1){
	font-size: 28rpx;
	color: #2E2E30;
}
.find-message-names>view:nth-of-type(2){
	width: 100%;
	height: 244rpx;
	border-bottom: 2rpx solid #EEEEEE;
}
.find-message-names>view:nth-of-type(2)>textarea{
	width: 100%;
	height: 100%;
	padding-top: 30rpx;
	padding-bottom: 50rpx;
}
.find-message-names>view:nth-of-type(3){
	position: absolute;
	bottom: 0;
	right: 0;
	font-size: 26rpx;
	color: #9B9B9B;
}
.find-message-but{
	width: 100%;
	height: 120rpx;
	position: fixed;
	bottom: 0;
	z-index: 99999999999999999999;
}
.find-message-but>view{
	width: 95%;
	height: 90rpx;
	background: #02C2A2;
	border-radius: 4rpx;
	margin: 16rpx auto;
	text-align: center;
	line-height: 90rpx;
	color: #FFFFFF;
	font-size: 28rpx;
}

