
.my-Focusonfans{
	width: 100%;
	min-height: 100%;
}
.tian{
	width: 100%;
	height: 88rpx;
}
.my-Focusonfans-header{
	width: 100%;
	height: 88rpx;
	background: #FFFFFF;
	border-bottom: 2rpx solid #F5F5F5;
	position: fixed;
	top: 0;
	z-index: 999;
}
.quickBtn-Fd{
	width: 5%;
	margin-left: 38rpx;
}
.my-Focusonfans-title{
	margin: 0 auto;
	width: 40%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.my-Focusonfans-title>view{
	width: 50%;
	height: 100%;
	text-align: center;
	line-height: 88rpx;
	font-size: 28rpx;
	color: #2E2E30;
	position: relative;
}
.changeColor {
	color: #02C2A2!important;
	font-weight: bold;
	font-size: 32rpx;
}
.changeColor:before {
	content: '';
	position: absolute;
	left: 36%;
	top: 70rpx;
	bottom: auto;
	right: auto;
	height: 7rpx;
	width: 30%;
	background-color: #02C2A2;
	color: #02C2A2;
}

