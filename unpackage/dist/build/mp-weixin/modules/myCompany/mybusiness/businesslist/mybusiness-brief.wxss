
.mybusiness-brief{
	width: 100%;
	background: #FFFFFF;
	padding: 0.1rpx;
}
.mybusiness-brief-con{
	font-size: 14px;
	color: #5D5D5D;
	width: 90%;
	margin: 50rpx auto auto;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
}
.fold{
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}
.show{
