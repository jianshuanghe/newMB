
.putIn-content{
	position: fixed;
	width: 100vw;
	background: #fff;
	margin-top: 1.5vw;
}
.title-items{
	position: relative;
	width: 100%;
	padding: 3vw;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #2E2E30;
	letter-spacing: 0;
	line-height: 46rpx;
}
.num{
	color: #02C2A2;
}
.createBusiness{
	color: #02C2A2;
	float: right;
}
.items-list{
	position: relative;
}
.next{
	position: fixed;
	bottom: 0;
	width: 100%;
	background: #fff;
	padding: 2vw 3vw;
}
.next>._p{
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #FFFFFF;
	letter-spacing: 0;
	text-align: center;
	line-height: 90rpx;
	background: #02C2A2;
}
.scroll-Y {
	height: 90vh;
	padding-bottom: 100rpx;
}
.scroll-view_H {
	white-space: nowrap;
	width: 100%;
}
.uni-scroll-view{
	height: 82vh;
}
.scroll-view-item {
	height: 82vh;
	line-height: 300rpx;
	text-align: center;
	font-size: 36rpx;
}
.scroll-view-item_H {
	display: inline-block;
	width: 100%;
	height: 300rpx;
	line-height: 300rpx;
	text-align: center;
	font-size: 36rpx;
}
.loading-more {
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	padding-top: 20rpx;
	padding-bottom: 50rpx;
	text-align: center;
}
.loading-more-text {
	font-size: 28rpx;
	color: #999;
}
.scrollContent{
	padding-bottom: 35vh;
}
.items-cont{
	position: relative;
	width: 100vw;
	padding: 3vw;
	background: #FFFFFF;
	-webkit-box-shadow: 0 0 10rpx 0 #E2E2E2;
	        box-shadow: 0 0 10rpx 0 #E2E2E2;
}
.check{
	position: relative;
	width: 6%;
	top: 6vw;
	margin-right: 1%;
}
.check-img{
	position: relative;
	width: 30rpx;
	height: 30rpx;
}
.img-cont{
	position: relative;
	width: 22%;
	height: 130rpx;
}
.items-img{
	position: relative;
	width: 130rpx;
	height: 130rpx;
}
.text-cot{
	position: relative;
	width: 68%;
	margin-left: 3%;
	height: 130rpx;
}
.title{
	position: relative;
	font-family: PingFangSC-Medium;
	font-size: 28rpx;
	color: #2E2E30;
	line-height: 44rpx;
}
.type-text{
	background: #02C2A2;
	border-radius: 2px;
	padding: 0.5vw 1vw;
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #FFFFFF;
	margin-left: 1vw;
}
.updata{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #BDBDBD;
	line-height: 24rpx;
	position: absolute;
	bottom: 0;
}
.uni-list-cell-pd {
    padding: 12rpx 30rpx;
    border: 0;
}
.uni-list-cell::after{
	height: 0 !important;
}

