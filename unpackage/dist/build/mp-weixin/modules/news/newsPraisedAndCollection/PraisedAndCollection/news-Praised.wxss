
.news-Praised{
	width: 100%;
	min-height: 100%;
}
.news-Praised-title{
	width: 90%;
	height: 72rpx;
	font-size: 24rpx;
	color: #2E2E30;
	margin: 0 auto;
	line-height: 72rpx;
}
.news-Praised-title>._span{
	font-size: 24rpx;
	color: #02C2A2;
}
.news-Praised-con{
	width: 100%;
	height: 274rpx;
	background: #FFFFFF;
}
.news-Praised-conOne{
	width: 90%;
	height: 100%;
	margin: 0 auto;
	border-bottom: 2rpx solid #F5F5F5;
	margin-top:2rpx;
}
.news-Praised-head{
	width: 72rpx;
	height: 100%;
	float: left;
}
.news-Praised-head>image{
	width: 72rpx;
	height: 72rpx;
	margin-top: 30rpx;
}
.news-Praised-body{
	width: 87%;
	height: 100%;
	float: right;
}
.news-Praised-body-shang{
	width: 100%;
	height: 110rpx;
	overflow: hidden;
}
.news-Praised-body-shang>view:nth-of-type(1){
	font-size: 28rpx;
	color: #2E2E30;
	margin-top: 25rpx;
}
.news-Praised-body-shang>view:nth-of-type(2){
	font-size: 24rpx;
	color: #9B9B9B;
	float: left;
}
.news-Praised-body-shang>view:nth-of-type(3){
	width: 30rpx;
	height: 30rpx;
	float: right;
	margin-top: -20rpx;
}
.news-Praised-body-shang>view:nth-of-type(3)>image{
	width: 100%;
	height: 100%;
}
.news-Praised-body-xia{
	width: 100%;
	height: 120rpx;
	margin-top: 20rpx;
}
.news-Praised-body-xia-nei{
	width: 78%;
	font-size: 26rpx;
	color: #2E2E30;
	line-height: 34rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	float: left;
}
