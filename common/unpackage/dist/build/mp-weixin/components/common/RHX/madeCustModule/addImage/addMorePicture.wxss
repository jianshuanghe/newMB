.imageUploadContainer{
	padding: 10rpx 0rpx;
	margin: 10rpx 0rpx;
}
.dragging{
	-webkit-transform: scale(0);
	    -ms-transform: scale(0);
	        transform: scale(0)
}
.imageUploadList{
	width: 100%;
	min-height: 148rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.imageUploadList view:nth-of-type(1){
	margin-left: 0;
}
.imageUpload{
	width: 148rpx;
	line-height: 150rpx;
	text-align: center;
	font-size: 150rpx;
	color: #D9D9D9;
	border: 1px solid #D9D9D9;
	border-radius: 8rpx;
	height: 148rpx;
	margin-left: 12rpx;
	margin-top: -10rpx;
}
.imageItem{
	width: 148rpx;
	width: 148rpx;
	margin-right: 12rpx;
}
.imageDel{
	position: relative;
	left: 120rpx;
	bottom: 185rpx;
	background-color: rgba(0,0,0,0.5);
	width: 36rpx;
	height: 27rpx;
	text-align: center;
	line-height: 14rpx;
	border-radius: 50%;
	color: white!important;
	font-size: 30rpx;
	padding-bottom: 2rpx;
}
.imageItem image, .moveImage{
	width: 148rpx;
	height: 148rpx;
	border-radius: 8rpx;
}
.moveImage{
	position: absolute;
}
.uni-swiper{
	height: 100% !important;
}
.imageDel{
	width: 32rpx;
	height: 30rpx;
	border-radius: 50%;
	line-height: 26rpx;
	margin-top: 4rpx;
	margin-left: 4rpx;
}
